#Kubernetes Alias

alias k='kubectl'
alias kaf='kubectl apply -f'
alias kafn='kubectl apply -f --namespace'
alias kc='kubectl create'
alias kcn='kubectl create namespaces'
alias kdel='kubectl delete'
alias kdelf='kubectl delete -f'
alias kdeln='kubectl delete nodes'
alias kdelp='kubectl delete pods'
alias kdels='kubectl delete services'
alias kdelns='kubectl delete namespace'
alias kdeldep='kubectl delete deployment'
alias kdelrs='kubectl delete replicaset'
alias kdelsts='kubectl delete statefulset'
alias kdelcj='kubectl delete cronjob'
alias kdeljb='kubectl delete job'
alias kdelcmap='kubectl delete configmap'
alias kdelsec='kubectl delete secret'
alias kdelall='kubectl delete all --all'
alias kd='kubectl describe'
alias kdn='kubectl describe nodes'
alias kdp='kubectl describe pods'
alias kds='kubectl describe services'
alias kddep='kubectl describe deployment'
alias kdcj='kubectl describe cronjob'
alias kex='kubectl exec -it'
alias kg='kubectl get'
alias kgall='kubectl get all'
alias kgallans='kubectl get all --all-namespaces'
alias kgallow='kubectl get all -o wide'
alias kgallansow='kubectl get all --all-namespaces -o wide'
alias kgoy='kubectl get -o yaml'
alias kgow='kubectl get -o wide'
alias kgoysl='kubectl get -o yaml --show-labels'
alias kgdep='kubectl get deployments'
alias kgdepan='kubectl get deployments --all-namespaces'
alias kgdepsl='kubectl get deployments --show-labels'
alias kgdepow='kubectl get deployments -o wide'
alias kgn='kubectl get nodes'
alias kgnan='kubectl get nodes --all-namespaces'
alias kgnsl='kubectl get nodes --show-labels'
alias kgnow='kubectl get nodes -o wide'
alias kgns='kubectl get namespaces'
alias kgnsow='kubectl get namespaces -o wide'
alias kgp='kubectl get pods'
alias kgpan='kubectl get pods --all-namespaces'
alias kgpsl='kubectl get pods --show-labels'
alias kgpow='kubectl get pods -o wide'
alias kgs='kubectl get services'
alias kgssl='kubectl get services --show-labels'
alias kgsow='kubectl get services -o wide'
alias kgsan='kubectl get services --all-namespaces'
alias klo='kubectl logs -f'
alias kp='kubectl proxy'
alias hi='helm install'
alias hin='helm install --namespace'
alias hifvy='helm install -f values.yaml'
alias hl='helm list'
alias hlan='helm list --all-namespaces'
alias hln='helm list --namespace'
alias hlaoya='helm list --all --output yaml'
alias ht='helm test'
alias hup='helm upgrade'
alias hupn='helm upgrade --namespace'
alias hupfvy='helm upgrade -f values.yaml'
alias hui='helm uninstall'
alias huin='helm uninstall --namespace'
